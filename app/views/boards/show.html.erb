<h1><%= "#{@board.title}" %></h1>
<hr />
<div class="ui secondary menu">
  <%= link_to "Create New List", new_board_list_path(@board), class: "item" %>
  <%= link_to "Back To Boards", boards_path, class: "item" %>
  <%= link_to "Edit Board", edit_board_path(@board), class: "item" %>
  <%= link_to "Delete Board", board_path(@board), method: :delete, class: "item" %>
</div>
<hr />
  <div class="ui list">
  <% @lists.each do |list| %>
    <div class="ui card">
      <div class="content">
        <%= list.title %>
        <div class="right floated meta">
          <div class="ui secondary menu">
            <%= link_to "Create Task", new_list_task_path(list), class: "item" %>
            <%= link_to "Edit", edit_board_list_path(@board, list), class: "item" %>
            <%= link_to "Delete", board_list_path(@board, list), method: :delete, class: "item" %>
          </div>
        </div>
        <hr />
      </div>
      <div class="content">
        Tasks
        <hr />
        <div class="ui list">
          <% list.tasks.each do |task| %>
            <%= task.title %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
