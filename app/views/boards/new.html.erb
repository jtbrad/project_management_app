<h1>Create New Board</h1>
<hr />
<%= form_with(model: @board, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Board Title"%>
  </div>
  <%= f.submit class: "ui button" %>
<% end %>
<hr />
<div class="ui secondary menu">
  <%= link_to "Back", boards_path, class: "item"%>
</div>
