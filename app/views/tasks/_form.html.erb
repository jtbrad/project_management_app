<%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Task Title" %>
  </div>
  <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority, required: true, placeholder: "Task Priority" %>
  </div>
  <%= f.submit class: "ui button" %>
<% end %>